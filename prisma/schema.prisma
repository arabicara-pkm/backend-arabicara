generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// =================================
//        AUTHENTICATION
// =================================

model User {
  id        String      @id @default(uuid())
  email     String   @unique
  username  String
  password  String?
  avatar    String?
  googleId  String?  @unique

  role      String   @default("student")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  levelProgress  UserLevelProgress[]
  lessonProgress UserLessonProgress[]
}

// =================================
//        DICTIONARY MODULE
// =================================

model DictionaryCategory {
  id   Int    @id @default(autoincrement())
  name String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  vocabularies Vocabulary[]
}

model Vocabulary {
  id                  Int     @id @default(autoincrement())
  arabicText          String
  indonesianText      String
  arabicVoicePath     String?
  indonesianVoicePath String?
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  // Relations
  categoryId Int
  category   DictionaryCategory @relation(fields: [categoryId], references: [id])
}

// =================================
//        LEARNING MODULE
// =================================

model Level {
  id          Int     @id @default(autoincrement())
  name        String
  description String?
  sequence    Int     @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  lessons  Lesson[]
  exercises Exercise[]
  progress UserLevelProgress[]
}

model Lesson {
  id        Int     @id @default(autoincrement())
  title     String
  content   String   @db.Text // Tipe data untuk teks panjang
  voicePath String?
  sequence  Int     // Urutan pelajaran di dalam level

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  levelId  Int
  level    Level    @relation(fields: [levelId], references: [id])
  progress UserLessonProgress[]

  @@unique([levelId, sequence])
}

model Exercise {
  id       Int     @id @default(autoincrement())
  question String
  type     String // e.g., 'MULTIPLE_CHOICE', 'SPEECH_TO_TEXT'
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  levelId  Int? // Dibuat opsional untuk Ujian Akhir
  level    Level?   @relation(fields: [levelId], references: [id])
  choices  AnswerChoice[]
}

model AnswerChoice {
  id        Int     @id @default(autoincrement())
  text      String
  isCorrect Boolean
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  exerciseId Int
  exercise   Exercise @relation(fields: [exerciseId], references: [id])
}

// =================================
//        USER PROGRESS
// =================================

// Tabel untuk melacak progres penyelesaian Level
model UserLevelProgress {
  id          Int      @id @default(autoincrement())
  status      String   // e.g., 'COMPLETED', 'IN_PROGRESS'
  score       Float?   // Skor dari ujian level
  completedAt DateTime @default(now())
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  userId String
  user   User @relation(fields: [userId], references: [id])
  levelId Int
  level   Level @relation(fields: [levelId], references: [id])

  @@unique([userId, levelId])
}

// Tabel BARU untuk melacak progres penyelesaian Lesson
model UserLessonProgress {
  id          Int      @id @default(autoincrement())
  status      String   // e.g., 'COMPLETED', 'IN_PROGRESS'
  completedAt DateTime @default(now())

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  userId String
  user   User @relation(fields: [userId], references: [id])
  lessonId Int
  lesson   Lesson @relation(fields: [lessonId], references: [id])

  @@unique([userId, lessonId])
}