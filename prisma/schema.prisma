generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// =================================
//        AUTHENTICATION
// =================================

model User {
  id             String   @id @default(uuid())
  email          String   @unique
  username       String
  password       String?
  avatar         String?
  googleId       String?  @unique @map("google_id")
  role           String   @default("student")
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")

  // Relations
  levelProgress  UserLevelProgress[]
  lessonProgress UserLessonProgress[]

  @@map("users")
}

// =================================
//        DICTIONARY MODULE
// =================================

model DictionaryCategory {
  id        Int      @id @default(autoincrement())
  name      String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  vocabularies Vocabulary[]

  @@map("dictionary_categories")
}

model Vocabulary {
  id                  Int      @id @default(autoincrement())
  arabicText          String   @map("arabic_text")
  indonesianText      String   @map("indonesian_text")
  arabicVoicePath     String?  @map("arabic_voice_path")
  indonesianVoicePath String?  @map("indonesian_voice_path")
  createdAt           DateTime @default(now()) @map("created_at")
  updatedAt           DateTime @updatedAt @map("updated_at")

  // Relations
  categoryId Int                @map("category_id")
  category   DictionaryCategory @relation(fields: [categoryId], references: [id])

  @@map("vocabularies")
}

// =================================
//        LEARNING MODULE
// =================================

model Level {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  sequence    Int      @unique
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  // Relations
  lessons  Lesson[]
  exercises Exercise[]
  progress UserLevelProgress[]

  @@map("levels")
}

model Lesson {
  id        Int      @id @default(autoincrement())
  title     String
  content   String   @db.Text
  voicePath String?  @map("voice_path")
  sequence  Int
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  levelId  Int    @map("level_id")
  level    Level    @relation(fields: [levelId], references: [id], onDelete: Cascade)
  progress UserLessonProgress[]

  @@unique([levelId, sequence])
  @@map("lessons")
}

model Exercise {
  id        Int      @id @default(autoincrement())
  question  String
  type      String
  voicePath String?  @map("voice_path")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  levelId  Int?     @map("level_id")
  level    Level?   @relation(fields: [levelId], references: [id], onDelete: Cascade)
  choices  AnswerChoice[]

  @@map("exercises")
}

model AnswerChoice {
  id         Int      @id @default(autoincrement())
  text       String
  isCorrect  Boolean  @map("is_correct")
  voicePath  String?  @map("voice_path")
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  // Relations
  exerciseId Int      @map("exercise_id")
  exercise   Exercise @relation(fields: [exerciseId], references: [id], onDelete: Cascade)

  @@map("answer_choices")
}

// =================================
//        USER PROGRESS
// =================================

model UserLevelProgress {
  id          Int      @id @default(autoincrement())
  status      String
  score       Float?
  completedAt DateTime @default(now()) @map("completed_at")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  // Relations
  userId String @map("user_id")
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  levelId Int    @map("level_id")
  level   Level  @relation(fields: [levelId], references: [id], onDelete: Cascade)

  @@unique([userId, levelId])
  @@map("user_level_progresses")
}

model UserLessonProgress {
  id          Int      @id @default(autoincrement())
  status      String
  completedAt DateTime @default(now()) @map("completed_at")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  // Relations
  userId   String @map("user_id")
  user     User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  lessonId Int    @map("lesson_id")
  lesson   Lesson @relation(fields: [lessonId], references: [id], onDelete: Cascade)

  @@unique([userId, lessonId])
  @@map("user_lesson_progresses")
}